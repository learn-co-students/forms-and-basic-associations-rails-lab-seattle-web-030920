<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title, "Song Title:" %>
  <%= f.text_field :title %><br>

  <%= f.label :artist, "Artist Name:" %>
  <%= f.text_field :artist_name %><br>

  <%= f.label :genre, "Select Genre:" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>

  <h2>Notes</h2>
  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label :note %>
    <%= note_form.text_area :content, rows: 5, cols: 50 %>
  <% end %><br>

  <%= f.submit %>
<% end %>
