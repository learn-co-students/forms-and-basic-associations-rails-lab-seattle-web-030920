<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.text_field :artist_name, list: "song_artist_name" %>
    <datalist id="song_artist_name">
      <% @artists.each do |a| %>
        <option value="<%= a.name %>">
      <% end %>
    </datalist>
  <%= f.collection_select :genre_id, @genres, :id, :name %>
  <!-- implement notes -->
  <input name="song[note_contents][]" id="song_notes_attributes_0_content">
  <input name="song[note_contents][]" id="song_notes_attributes_1_content">
  <input name="song[note_contents][]" id="song_notes_attributes_2_content">

  <%= f.submit %>
<% end %>


